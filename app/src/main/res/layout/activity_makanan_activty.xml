<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakananActivty">

    <ImageView
        android:id="@+id/idGambar"
        android:layout_width="186dp"
        android:layout_height="199dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textDeskrip"
        android:layout_width="193dp"
        android:layout_height="277dp"
        android:layout_marginTop="100dp"
        android:text="deskrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idGambar" />

    <TextView
        android:id="@+id/dtlhraga"
        android:layout_width="115dp"
        android:layout_height="27dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="38dp"
        android:text="harga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeskrip" />

    <TextView
        android:id="@+id/namatxt"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="37dp"
        android:gravity="center"
        android:text="nama"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textDeskrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idGambar" />
</androidx.constraintlayout.widget.ConstraintLayout>